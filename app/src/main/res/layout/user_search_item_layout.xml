<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profile_image2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_profile"
        android:tint="@android:color/white" />

    <TextView
        android:id="@+id/tv_user_name2"
        android:layout_toRightOf="@+id/iv_profile_image2"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="@string/user_name"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="19sp"
        android:textStyle="bold" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:visibility="gone"
        android:id="@+id/iv_online"
        android:layout_below="@+id/tv_user_name2"
        android:layout_toRightOf="@+id/tv_user_name2"
        android:layout_toEndOf="@+id/iv_profile_image2"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="-16dp"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:civ_border_width="12dp"
        app:civ_border_color="#05df29"
        android:src="@drawable/ic_profile"
        android:tint="@android:color/white" />



    <de.hdodenhof.circleimageview.CircleImageView
        android:visibility="gone"
        android:id="@+id/iv_offline"
        android:layout_below="@+id/tv_user_name2"
        android:layout_toRightOf="@+id/tv_user_name2"
        android:layout_toEndOf="@+id/iv_profile_image2"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="-16dp"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:civ_border_width="12dp"
        app:civ_border_color="#bfbfbf"
        android:src="@drawable/ic_profile"
        android:tint="@android:color/white" />




    <TextView
        android:id="@+id/tv_msg_last"
        android:layout_toRightOf="@+id/iv_profile_image2"
        android:layout_below="@+id/tv_user_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="20dp"
        android:padding="6dp"
        android:text=""
        android:textColor="@color/colorPrimaryDark"
        android:textSize="19sp"
        android:textStyle="normal"
        android:maxLines="1"/>




</RelativeLayout>